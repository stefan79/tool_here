{
  "name": "tool_here",
  "version": "1.0.0",
  "description": "A MCP server to deliver tooling around geo searches.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "debug": "ts-node-dev --inspect-brk src/index.ts",
    "test": "jest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "inspector": "npx @modelcontextprotocol/inspector",
    "package": "podman build -t $npm_package_name:$npm_package_version .",
    "package:run": "source .env && podman run -p 3000:3000 -e HERE_API_KEY=$HERE_API_KEY $npm_package_name:$npm_package_version",
    "package:tag": "podman tag $npm_package_name:$npm_package_version ghcr.io/stefan79/$npm_package_name:$npm_package_version",
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "nodemon": "^3.1.9",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "axios-logger": "^2.8.1",
    "eslint": "^8.57.1",
    "eslint-plugin-jest": "^28.11.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:stefan79/tool_here.git"
  }
}
